<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label 'Tags' %><br />
    <%= f.text_field :tags_string %> 
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
