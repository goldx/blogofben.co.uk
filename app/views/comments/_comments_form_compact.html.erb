<div class="comment-form" id="form_<%= @article.id %>" >
<div class="comment">
<div class="form-wrapper">
  <h1>Add Comment</h1>
  <% form_for([@article, @comment]) do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label 'Your Name' %><br />
      <%= f.text_field :poster_name %>
    </p>
    <p>
      <%= f.label 'Comment' %><br />
      <%= f.text_area :body, :size => "40x10" %>
    </p>
    <p>
      <%= f.submit 'Post' %>
    </p>
  <% end %>
</div>
</div>
</div>
